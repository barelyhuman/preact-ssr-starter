{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "target": "esnext",
    "jsxImportSource": "preact",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules/**/*"]
}
